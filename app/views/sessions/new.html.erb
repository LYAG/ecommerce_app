<h1>Log In</h1>
<%= form_with url: login_path do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit 'Log In' %>
  </div>
<% end %>

<p>Don't have an account? <%= link_to 'Sign Up', register_path %></p>
